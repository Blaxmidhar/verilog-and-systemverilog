class reverseArray;
  bit [3:0] array[];  // Dynamic array to store the reversed result

  // Constructor to reverse the array during initialization
  function new(bit [3:0] array_input[]);
    int n = array_input.size();
    array = new[n]; // Allocate memory for array
    for (int i = 0; i < n; i++) begin
      array[i] = array_input[n - i - 1];
    end
  endfunction

  // Print function
  function void print_array();
    foreach (array[i])
      $display("array[%0d] = %0d", i, array[i]);
  endfunction
endclass

module tb;
  bit [3:0] array_input[] = '{1, 2, 3, 4, 5};
  reverseArray t1;

  initial begin
    t1 = new(array_input);
    $display("Reversed Array:");
    t1.print_array();
  end
endmodule
